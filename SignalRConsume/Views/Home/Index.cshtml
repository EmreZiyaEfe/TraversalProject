@{
    ViewData["Title"] = "Home Page";
}

@section Scripts 
{
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/6.0.25/signalr.min.js"></script>
    <script>
        $(document).ready(() => {
            var connection = new signalR.HubConnectionBuilder()
                .withUrl("http://localhost:5104/VisitorHub")
                .build();

            $("#connectionStatus").text(connection.state);

            connection.start()
                .then(() => {
                    $("#connectionStatus").text(connection.state);
                })
                .catch(err => console.error("SignalR connection error:", err));
        });
    </script>
}

<div class="container">
    <br />
    <div class="alert alert-warning">
        Bağlantı durumu : <b id="connectionStatus"></b>
    </div>
</div>