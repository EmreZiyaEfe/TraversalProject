@using Traversal.Core.Concrete.Entities
@model List<Feature>

@if(Model != null && Model.Count > 0)
{
    <div class="best-rooms py-5">
        <div class="container py-md-5">
            <div class="ban-content-inf row">

                <div class="maghny-gd-1 col-lg-6">
                    <div class="maghny-grid">
                        <figure class="effect-lily border-radius  m-0">
                            <img class="img-fluid" src="@Model[0].Image" alt="@Model[0].Title" />
                            <figcaption>
                                <div>
                                    <h4>@Model[0].Title</h4>
                                    <p>@Model[0].Description $ </p>
                                </div>

                            </figcaption>
                        </figure>
                    </div>
                </div>


                <div class="maghny-gd-1 col-lg-6 mt-lg-0 mt-4">
                    <div class="row">

                        @for (int i = 1; i < Math.Min(5, Model.Count); i++)
                        {
                            <div class="maghny-gd-1 col-6 @(i >= 3 ? "mt-4" : "")">
                                <div class="maghny-grid">
                                    <figure class="effect-lily border-radius">
                                        <img class="img-fluid" src="@Model[i].Image" alt="@Model[i].Title" />
                                        <figcaption>
                                            <div>
                                                <h4>@Model[i].Title</h4>
                                                <p>@Model[i].Description $ </p>
                                            </div>

                                        </figcaption>
                                    </figure>
                                </div>
                            </div>
                        }
                       
                    </div>
                </div>
            </div>
        </div>
    </div>
}


