@using TraversalProject.Areas.Admin.Models;
@model VisitorVm
@{
    ViewData["Title"] = "UpdateVisitor";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Update Visitor with API</h1>

<br />
<form method="post">
    <input type="hidden" asp-for="Id"/>
    <label>Visitor's Name</label>
    <input type="text" class="form-control" asp-for="Name" />
    <br />
    <label>Visitor's Surname</label>
    <input type="text" class="form-control" asp-for="Surname" />
    <br />
    <label>Visitor's City</label>
    <input type="text" class="form-control" asp-for="City" />
    <br />
    <label>Visitor's Country</label>
    <input type="text" class="form-control" asp-for="Country" />
    <br />
    <label>Visitor's Mail</label>
    <input type="text" class="form-control" asp-for="Mail" />
    <br />
    <button class="btn btn-outline-primary">Update Visitor</button>
</form>