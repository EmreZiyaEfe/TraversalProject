@using TraversalProject.Areas.Admin.Models;
@model List<VisitorVm>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Api Visitor List</h1>
<br />
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Name</th>
        <th>Surname</th>
        <th>City</th>
        <th>Country</th>
        <th>Mail</th>
        <th>Update</th>
        <th>Delete</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Surname</td>
            <td>@item.City</td>
            <td>@item.Country</td>
            <td>@item.Mail</td>
            <td><a href="/Admin/VisitorApi/UpdateVisitor/@item.Id/" class="btn btn-outline-warning">Update</a></td>
            <td><a href="/Admin/VisitorApi/DeleteVisitor/@item.Id/" class="btn btn-outline-danger">Delete</a></td>
        </tr>
    }
</table>

<a href="/Admin/VisitorApi/AddVisitor/" class="btn btn-outline-primary">Add a New Visitor</a>
