@model List<AppRole>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<h1>Roles</h1>



@if (Model.Count > 0)
{
    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <th>Role Name</th>
            <th>Edit of Role</th>
            <th>Delete of Role</th>
        </tr>
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <td>@count</td>
                <td>@item.Name</td>
                <td><a href="/Admin/Role/Update/@item.Id" class="btn btn-outline-warning">Update</a></td>
                <td><a href="/Admin/Role/Delete/@item.Id" class="btn btn-outline-danger">Delete</a></td>
            </tr>
        }

    </table>

}

else
{
    <div class="alert alert-danger">
        <span>No role was found</span>
    </div>
}


<a href="/Admin/Role/Create/" class="btn btn-outline-primary"> Add a New Role</a>
