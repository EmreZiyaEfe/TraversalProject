@using TraversalProject.CQRS.Results.GuideResult;
@model List<GetAllGuideQeryResult>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<h1>CQRS MediatR Guide List</h1>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Name</th>
        <th>Description</th>
        <th>Update</th>
        <th>Delete</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td>@item.Name</td>
            <td>@item.Description</td>
            <td><a href="/Admin/DestinationMediatR/GetGuide/@item.Id" class="btn btn-outline-warning">Update</a></td>
            <td><a href="#" class="btn btn-outline-danger">Delete</a></td>
        </tr>
    }
</table>

<a href="/Admin/GuideMediatR/AddGuide/" class="btn btn-outline-primary">Add a New Guide</a>