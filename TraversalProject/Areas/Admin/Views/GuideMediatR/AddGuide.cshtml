@using TraversalProject.CQRS.Commands.GuideCommands;
@model CreateGuideCommand
@{
    ViewData["Title"] = "AddGuide";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Add Guide</h1>

<form method="post">
    <label>Guide's Name</label>
    <input type="text" asp-for="Name" class="form-control"/>
    <br />
    <label>Description</label>
    <input type="text" asp-for="Description" class="form-control"/>
    <br />
    <label>Image</label>
    <input type="text" asp-for="Image" class="form-control" />
    <br />
    <button class="btn btn-outline-info">Add a Guide</button>
</form>