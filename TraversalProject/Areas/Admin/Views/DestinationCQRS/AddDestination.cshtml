@using TraversalProject.CQRS.Commands.DestinationCommands;
@model CreateDestinationCommand
@{
    ViewData["Title"] = "AddDestination";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Add Destination with CQRS</h1>

<form method="post">
    <label>City</label>
    <input type="text" asp-for="City" class="form-control" />
    <br />
    <label>Day - Night</label>
    <input type="text" asp-for="DayNight" class="form-control" />
    <br />
    <label>Price</label>
    <input type="text" asp-for="Price" class="form-control" />
    <br />
    <label>Capacity</label>
    <input type="text" asp-for="Capacity" class="form-control" />
    <br />
    <label>Image</label>
    <input type="text" asp-for="Image" class="form-control" />
    <br />
    <label>Description</label>
    <input type="text" asp-for="Description" class="form-control" />
    <br />
    <label>CoverImage</label>
    <input type="text" asp-for="CoverImage" class="form-control" />
    <br />
    <label>FirstContent</label>
    <input type="text" asp-for="FirstContent" class="form-control" />
    <br />
    <label>SecondContent</label>
    <input type="text" asp-for="SecondContent" class="form-control" />
    <br />
    <label>Image2</label>
    <input type="text" asp-for="Image2" class="form-control" />
    <br />
    <button class="btn btn-outline-primary">Add a New Destination</button>
</form>