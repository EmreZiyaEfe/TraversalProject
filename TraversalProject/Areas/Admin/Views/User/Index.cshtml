@model List<AppUser>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<h1>User List</h1>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Name Surname</th>
        <th>Username</th>
        <th>Mail</th>
        <th>Edit</th>
        <th>Delete</th>
        <th>Comments</th>
        <th>Previous Tours</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            @{count = count+1;};
            <td>@count</td>
            <td>@item.Name  @item.Surname</td>
            <td>@item.UserName</td>
            <td>@item.Email</td>
            <td><a href="/Admin/User/Update/@item.Id" class="btn btn-outline-warning">Update</a></td>
            <td><a href="/Admin/User/Delete/@item.Id" class="btn btn-outline-danger">Delete</a></td>
            <td><a href="/Admin/User/UserComment/@item.Id" class="btn btn-outline-info">Comments of User</a></td>
            <td><a href="/Admin/User/UserReservation/@item.Id" class="btn btn-outline-primary">Previous Tour</a></td>
        </tr>
    }
</table>

<a href="/Admin/User/Add" class="btn btn-outline-primary">Add a New User</a>