@model List<Reservation>

@{
    ViewData["Title"] = "UserReservation";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<h1>Reservations of Users</h1>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Guest Name Surname</th>
        <th>Destination</th>
        <th>Person Count</th>
        <th>Date</th>
        <th>Details</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            @{
                count = count + 1;
            };
            <td>@count</td>
            <td>###</td>
            <td>@item.Destination.City</td>
            <td>@item.PersonCount</td>
            <td>@(((DateTime)item.ReservationDate).ToString("dd-MMM-yyyy"))</td>
            <td><a href="#" class="btn btn-outline-primary">Details</a></td>
        </tr>
    }
</table>

