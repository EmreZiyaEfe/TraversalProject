@using Traversal.DTO.DTOs.AnnouncementDtos;

@model List<AnnouncementListDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<h1>Announcement List</h1>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Title</th>
        <th>Content</th>
        <th>Details</th>
        <th>Delete</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td>@item.Title</td>
            <td>@item.Content</td>
            <td><a href="#" class="btn btn-outline-dark">Details</a></td>
            <td><a href="/Admin/Announcement/UpdateAnnouncement/@item.Id" class="btn btn-outline-warning">Update</a></td>
            <td><a href="/Admin/Announcement/DeleteAnnouncement/@item.Id" class="btn btn-outline-danger">Delete</a></td>
        </tr>
    }
</table>
<br />
<a href="/Admin/Announcement/AddAnnouncement/" class="btn btn-outline-info">Add A New Announcement</a>
