@model List<Comment>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>User</th>
        <th>Destination</th>
        <th>Content</th>
        <th>Date</th>
        <th>Delete</th>
    </tr>

        @foreach (var item in Model)
        {
          <tr>
              <td>@item.Id</td>
              <td>@item.Name</td>
              <td>@item.Destination.City</td>
              <td>@item.Content</td>
              <td>@(((DateTime)item.TypeDate).ToString("dd-MMM-yyyy"))</td>
              <td><a href="/Admin/Comment/Delete/@item.Id" class="btn btn-outline-danger">Delete</a></td>
          </tr>  
        }
</table>

