@model Guide
@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Add Guide</h1>

<form method="post">
    <div class="form-group">
        @Html.Label("Name Surname")
        <input type="text" asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <br />
    <div class="form-group">
        @Html.Label("Image")
        <input type="text" asp-for="Image" class="form-control" />
        <span asp-validation-for="Image" class="text-danger"></span>

    </div>
    <br />
    <div class="form-group">
        @Html.Label("Descripiton")
        <textarea cols="30" rows="5" asp-for="Description" class="form-control"> </textarea>
        <span asp-validation-for="Description" class="text-danger"></span>

    </div>
    <br />
    <div class="form-group">
        @Html.Label("Instagram")
        <input type="text" asp-for="InstagramUrl" class="form-control" />
    </div>
    <br />
    <div class="form-group">
        @Html.Label("X")
        <input type="text" asp-for="XUrl" class="form-control" />
    </div>
    <br />
    <button class="btn btn-outline-primary">Add a New Guide </button>
</form>