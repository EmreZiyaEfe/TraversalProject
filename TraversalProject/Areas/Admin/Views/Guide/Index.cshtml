@model List<Guide>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<h1>Guides</h1>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Image</th>
        <th>Name Surname</th>
        <th>Description</th>
        <th>Edit</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            @{count = count +1 ;}
            <td>@count</td>
            <td><img src="@item.Image" width="50" height="50" class="img-fluid rounded" /></td>
            <td>@item.Name</td>
            <td>@item.Description</td>
            <td><a href="/Admin/Guide/Edit/@item.Id" class="btn btn-outline-warning">Edit</a></td>
            <td><a href="/Admin/Guide/Delete/@item.Id" class="btn btn-outline-danger">Delete</a></td>
        </tr>
    }

</table>

<a href="/Admin/Guide/Add/" class="btn btn-outline-primary">Add a New Guide</a>