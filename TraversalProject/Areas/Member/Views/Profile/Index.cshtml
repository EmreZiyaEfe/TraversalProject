@model UserEditVm 
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<h1>Edit Your Profile</h1>
<form method="post" enctype="multipart/form-data">
    @Html.Label("Name")
    <input type="text" asp-for="Name" class="form-control"/>
    <br />
    @Html.Label("SurName")
    <input type="text" asp-for="SurName" class="form-control" />
    <br />
    @Html.Label("Mail")
    <input type="text" asp-for="Mail" class="form-control" />
    <br /> 
    @Html.Label("Password")
    <input type="text" asp-for="Password" class="form-control" />
    <br />
    @Html.Label("ConfirmPassword")
    <input type="text" asp-for="ConfirmPassword" class="form-control" />
    <br />
    @Html.Label("Phone Number")
    <input type="text" asp-for="PhoneNumber" class="form-control" />
    <br />
    <div class="form-group">
        <label>Choose your picture</label>
        <input type="file" asp-for="Image"/>
    </div>
    <br />
    <button class="btn btn-primary">Update</button>
</form>

